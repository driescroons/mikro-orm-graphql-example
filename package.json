{
	"name": "mikrorm-typegraphql-example",
	"description": "A MikroORM boilerplate for GraphQL made with Typescript using TypeGraphQL",
	"version": "1.0.0",
	"license": "MIT",
	"author": "Dries Croons",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsc",
		"dev": "pnpx cross-env NODE_DEV=true ts-node-dev src/index.ts",
		"gen-env-types": "gen-env-types .env -o src/utils/types/env.d.ts -e .",
		"start": "pnpm build && pnpx cross-env NODE_PATH=./dist/src node dist/src/index.js",
		"lint": "pnpm run lint-check-format && pnpm run lint-es",
		"lint-es": "eslint --cache --ignore-path .gitignore **/*.{ts,json,md} ",
		"lint-check-format": "prettier --ignore-path .gitignore --check --cache --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --cache --plugin-search-dir=. .",
		"test": "pnpx cross-env NODE_DEV=true NODE_ENV=test ./node_modules/.bin/ts-mocha ./tests/**/*.test.ts --package package.json",
		"test:loadFixtures": "vitest initAll"
	},
	"dependencies": {
		"@apollo/server": "4.5.0",
		"@mikro-orm/core": "5.6.14",
		"@mikro-orm/migrations": "5.6.14",
		"@mikro-orm/postgresql": "5.6.14",
		"@mikro-orm/sql-highlighter": "1.0.1",
		"body-parser": "1.20.2",
		"class-validator": "0.14.0",
		"cors": "2.8.5",
		"dotenv": "16.0.3",
		"express": "4.18.2",
		"express-async-errors": "3.1.1",
		"graphql": "16.6.0",
		"graphql-subscriptions": "2.0.0",
		"reflect-metadata": "0.1.13",
		"type-graphql": "next",
		"uuid": "9.0.0"
	},
	"devDependencies": {
		"@faker-js/faker": "7.6.0",
		"@mikro-orm/cli": "5.6.14",
		"@types/chai": "4.3.4",
		"@types/cors": "2.8.13",
		"@types/express": "4.17.17",
		"@types/mocha": "10.0.1",
		"@types/node": "18.15.3",
		"@types/supertest": "2.0.12",
		"@types/uuid": "9.0.1",
		"@typescript-eslint/eslint-plugin": "5.55.0",
		"@typescript-eslint/parser": "5.55.0",
		"chai": "4.3.7",
		"eslint": "8.36.0",
		"eslint-config-prettier": "8.7.0",
		"eslint-plugin-markdown": "3.0.0",
		"gen-env-types": "1.3.4",
		"graphql-tag": "2.12.6",
		"mocha": "10.2.0",
		"prettier": "2.8.4",
		"prettier-plugin-organize-imports": "3.2.2",
		"supertest": "6.3.3",
		"ts-mocha": "10.0.0",
		"ts-node-dev": "2.0.0",
		"tsconfig-paths": "4.1.2",
		"typescript": "4.9.5"
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/orm.config.ts"
		]
	},
	"mocha": {
		"require": [
			"ts-node/register/transpile-only",
			"tsconfig-paths/register",
			"dotenv/config",
			"reflect-metadata"
		],
		"recursive": true,
		"exit": true,
		"timeout": 99999,
		"forbidPending": true,
		"color": true
	},
	"engines": {
		"node": ">=14.0.0"
	}
}
