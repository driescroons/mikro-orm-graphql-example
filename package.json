{
  "name": "mikrorm-typegraphql-example",
  "description": "A MikroORM boilerplate for GraphQL made with Typescript using TypeGraphQL",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Dries Croons",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "pnpx cross-env NODE_DEV=true ts-node-dev -r tsconfig-paths/register src/index.ts",
    "gen-env-types": "gen-env-types .env -o src/utils/types/env.d.ts -e .",
    "start": "pnpm build && pnpx cross-env NODE_PATH=./dist/src node dist/src/index.js",
    "lint": "eslint src/**/*.ts --fix",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest watch",
    "loadFixtures": "vitest init.test",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@mikro-orm/core": "5.6.14",
    "@mikro-orm/migrations": "5.6.14",
    "@mikro-orm/postgresql": "5.6.14",
    "@mikro-orm/sql-highlighter": "1.0.1",
    "apollo-server-core": "3.12.0",
    "apollo-server-express": "3.12.0",
    "class-validator": "0.14.0",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "express-async-errors": "3.1.1",
    "graphql": "16.6.0",
    "graphql-subscriptions": "2.0.0",
    "reflect-metadata": "0.1.13",
    "type-graphql": "next",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@mikro-orm/cli": "5.6.14",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/express-serve-static-core": "4.17.33",
    "@types/node": "18.15.3",
    "@types/serve-static": "1.15.1",
    "@types/supertest": "2.0.12",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "gen-env-types": "1.3.4",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "prettier": "2.8.4",
    "supertest": "6.3.3",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.5",
    "@vitest/ui": "latest",
    "vitest": "0.29.2",
    "vite": "4.1.4",
    "@rollup/plugin-graphql": "2.0.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/orm.config.ts"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "resolutions": {
    "@types/serve-static": "1.13.9"
  }
}
