{
	"name": "mikro-orm-graphql-example",
	"description": "A MikroORM boilerplate for GraphQL made with Typescript using TypeGraphQL",
	"version": "1.0.0",
	"license": "MIT",
	"author": "Dries Croons",
	"main": "src/index.ts",
	"scripts": {
		"build": "tsc",
		"dev": "cross-env NODE_DEV=true ts-node-dev -r tsconfig-paths/register src/index.ts",
		"gen-env-types": "gen-env-types .env -o src/utils/types/env.d.ts -e .",
		"start": "yarn build && cross-env NODE_PATH=./dist/src node dist/src/index.js",
		"lint": "eslint src/**/*.ts --fix",
		"test": "cross-env NODE_DEV=true NODE_ENV=test ts-mocha ./tests/**/*.test.ts --package package.json",
		"loadFixtures": "yarn test --grep \"should clear database and load fixtures\"",
		"prepare": "husky install"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix"
		]
	},
	"dependencies": {
		"@mikro-orm/core": "5.1.0",
		"@mikro-orm/migrations": "5.1.0",
		"@mikro-orm/postgresql": "5.1.0",
		"apollo-server-core": "^3.6.4",
		"apollo-server-express": "^3.6.4",
		"class-validator": "^0.13.2",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.0",
		"express": "^4.17.3",
		"express-async-errors": "^3.1.1",
		"graphql": "^15.8.0",
		"graphql-fields-to-relations": "^1.0.5",
		"graphql-subscriptions": "^2.0.0",
		"reflect-metadata": "^0.1.13",
		"type-graphql": "^1.1.1",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@faker-js/faker": "6.0.0-beta.0",
		"@mikro-orm/cli": "5.1.0",
		"@types/chai": "^4.3.0",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/express-serve-static-core": "4.17.28",
		"@types/mocha": "^9.1.0",
		"@types/serve-static": "1.13.10",
		"@types/supertest": "^2.0.11",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.14.0",
		"@typescript-eslint/parser": "^5.14.0",
		"chai": "^4.3.6",
		"eslint": "^8.11.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"gen-env-types": "^1.3.3",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.5",
		"mocha": "^9.2.2",
		"prettier": "^2.5.1",
		"supertest": "^6.2.2",
		"ts-mocha": "^9.0.2",
		"ts-node-dev": "^1.1.8",
		"tsconfig-paths": "^3.14.0",
		"typescript": "^4.6.2"
	},
	"mocha": {
		"require": [
			"ts-node/register/transpile-only",
			"tsconfig-paths/register",
			"dotenv/config",
			"reflect-metadata"
		],
		"recursive": true,
		"exit": true,
		"timeout": 99999,
		"forbidPending": true,
		"color": true
	},
	"mikro-orm": {
		"useTsNode": true,
		"configPaths": [
			"./src/orm.config.ts"
		]
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"resolutions": {
		"@types/serve-static": "1.13.9"
	}
}
