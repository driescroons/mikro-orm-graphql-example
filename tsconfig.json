{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"lib": ["ESNext"],
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"removeComments": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"typeRoots": ["src/utils/types", "node_modules/@types"],
		"sourceRoot": "src",
		"paths": {
			"*": ["./src/*"]
		}
	},
	"exclude": ["**/node_modules/**/*"],
	"include": ["./src/**/*.ts"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
